block content
	.jumbotron
		h1 #{doc.name}
		p ID: #{doc._id}


		div#accordion(role="tablist" aria-multiselectable="true")
			.card
				.card-header(role="tab" id="headingOne")
					h5.mb-0
						a.text-info(data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne") Manage Areas
							i.material-icons.float-left keyboard_arrow_down

				#collapseOne.collapse(role="tabpanel" aria-labelledby="headingOne")
